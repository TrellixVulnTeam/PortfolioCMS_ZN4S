{% extends "base.html.twig" %}

{% block title %}Homepage{% endblock %}
{% block body %}
<section class="hero is-link is-fullheight-with-navbar ">
    <div class="hero-body">
        <h1 class="title has-text-grey-dark is-size-1">
            Me. A developer and PC Intusiast.
        </h1>
        <a href="#about">
            <div class="arrow-down">
                <span></span>
                <span></span>
                <span></span>
            </div>
        </a>

    </div>
</section>
<div class="container" {% if is_granted('IS_AUTHENTICATED_REMEMBERED') %}id="sortableSection"{% endif %}>
    {% for section in sections %}
        {% if is_granted('IS_AUTHENTICATED_REMEMBERED') %}
            {%  include 'sections/'~section.template  with {'sortable':'sortable','id':section.id,'sorting':section.sorting} %}
        {% else %}
            {%  include 'sections/'~section.template %}
        {% endif %}
    {% endfor %}
</div>
{% endblock %}